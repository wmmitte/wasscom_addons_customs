<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="report_fa_document">
			<!--<t t-call="web.external_layout">-->
			<t t-set="o" t-value="o.with_context({'lang': lang})" />
			<div class="page" style="page-break-after:always;page-break-inside: avoid;">
				<h5 style="text-align:center;">

					<div style="clear:both;"></div>
					<br></br>
					<div style="text-align:center;font-weight:bold;">
						<u>
							<span style="font-size:15px;" t-field="o.name" />
						</u>
					</div>

				</h5>
				<br></br>
				<div style="text-align:left;">
					<b style="font-size:15px;">Doit : </b>
					<span style="font-size:15px;" t-field="o.x_client.name" />
				</div>
				<br></br>
				<div style="text-align:left;">
					<b style="font-size:15px;">Contact : </b>
					<span style="font-size:15px;" t-field="o.x_adress" />
				</div>
				<br></br>
				<div style="text-align:left;">
					<b style="font-size:15px;">Objet </b>
					<span style="font-size:15px;" t-field="o.x_objet" />
				</div>
				<br></br>
				<table class="table table-bordered table-sm text-center border border-dark" border="1" style="border-collapse: collapse;width: 100%;">
					<tr style="border:1px soild #000">
						<th style="background-color:#CCC">N°BE</th>
						<th style="background-color:#CCC">N°BL</th>
						<th style="background-color:#CCC">Immatriculation</th>
						<th style="background-color:#CCC">Trajet</th>
						<th style="background-color:#CCC">Produit</th>
						<th style="background-color:#CCC">Capacité</th>
						<th style="background-color:#CCC">Taux</th>
						<th style="background-color:#CCC">Mnt Ligne</th>
					</tr>
					<div>
						<div t-foreach="o.x_line_ids" t-as="p">

							<tr style="border:1px soild #000">
								<td style="border:1px soild #000; text-align:center">
									<span t-field="p.x_num_be" />
								</td>
								<td style="border:1px soild #000; text-align:justify">
									<span t-field="p.x_num_bl" />
								</td>
								<td style="border:1px soild #000;text-align:justify">
									<span t-field="p.x_immatricul_id" />
								</td>
								<td style="border:1px soild #000; text-align:center">
									<span t-field="p.x_trajet_id.name" />
								</td>

								<td style="border:1px soild #000;text-align:justify">
									<span t-field="p.x_produit_id.name" />
								</td>
								<td style="border:1px soild #000;text-align:left">
									<span t-field="p.x_capacite" />
								</td>
								<td style="border:1px soild #000; text-align:justify">
									<span t-field="p.x_taux" />
								</td>
								<td style="border:1px soild #000; text-align:right">
									<span t-field="p.x_mt_ligne_reel" />
								</td>
							</tr>
						</div>
					</div>

					<tr style="border:1px soild #000">
						<th colspan="7">Montant Total</th>
						<th style="background-color:#CCC">
							<span t-field="o.x_total_facture_reel" />
						</th>
					</tr>
				</table>
				<div>
					<p>Arrêté la présente facture à la somme de : </p>
					<p>
						<strong>
							<span t-field="o.x_mnt_lettre" />
 (							<span t-field="o.x_total_facture_reel" />
) Francs CFA </strong>
					</p>
				</div>
				<div></div>
				<div></div>
				<div></div>
				<div></div>
				<table style="width:100% " width="100%" border="0">
					<tr>
						<td width="33%"></td>
						<td width="33%"></td>
						<td width="34%" style="text-align:center">
							<div class="text-center" style="text-align:center">
								<p>Directeur Général</p>
								<br></br>
								<br></br>
								<br></br>
								<br></br>
								<span t-field="o.x_signataire_id.name" />
							</div>
						</td>
					</tr>
				</table>


				<div style="clear:both;"></div>
			</div>
			<!--</t>-->
		</template>


		<template id="report_facture">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="Gestion_Facturation.report_fa_document" t-lang="lang" />
				</t>
			</t>
		</template>
	</data>
</odoo>