<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="report_fa_transit_document">

			<t t-set="o" t-value="o.with_context({'lang': lang})" />
			<div class="page" style="page-break-after:always;page-break-inside: avoid;">
				<div style="float:right">
					<br></br>
					<div style="text-align:left;">
						<b style="font-size:12px;">Date : </b>
						<span style="font-size:12px;" t-field="o.date_operation" />
					</div>
				</div>
				<br></br>
				<h3 style="text-align:center;">

					<div style="clear:both;"></div>

					<div style="text-align:center;font-weight:bold;">
						<br></br>
						<u>
							<span style="font-size:15px;" t-field="o.x_num_fact" />
						</u>
					</div>

				</h3>
				<br></br>
				<div style="float:left">
					<div style="text-align:left;">
						<b style="font-size:12px;">Doit : </b>
						<span style="font-size:12px;" t-field="o.name.x_designation_" />
					</div>

					<div style="text-align:left;">
						<b style="font-size:12px;">Contact : </b>
						<span style="font-size:12px;" t-field="o.name.x_contact" />
					</div>

					<div style="text-align:left;">
						<b style="font-size:12px;">Objet : </b>
						<span style="font-size:12px;"> Transit</span>
					</div>
					<br></br>
				</div>
				<br></br>
				<table class="table table-bordered table-sm text-center border border-dark" border="1" cellpading="5" style="border-collapse: collapse;width: 100%;">
					<tr style="border:1px solid #000;background-color:#CCC; font-size:12px;">
						<th style="text-align:center;">N°BE</th>
						<th style="text-align:center;">N°BL</th>
						<th style="text-align:left;">Immatriculation</th>
						<th style="text-align:left;">Trajet</th>
						<th style="text-align:left;">Produit</th>
						<th style="text-align:right;">Montant Ligne</th>
					</tr>
					<div>
						<div t-foreach="o.x_line_ids" t-as="p">

							<tr style="border:1px solid #000;font:12px lucida-console,sans-serif !important">
								<td style="font:12px lucida-console,sans-serif !important; text-align:center; ">
									<span t-field="p.x_num_be" />
 Du 
									<br/>
									<t t-if="p.x_num_be != '-' ">
										<span t-field="p.x_date_be" />
									</t>

								</td>
								<td style="font:12px lucida-console,sans-serif !important; text-align:center; ">
									<span t-field="p.x_num_bl" />
 Du 
									<br/>
									<t t-if="p.x_num_bl != '-' ">
										<span t-field="p.x_date_bl" />
									</t>
								</td>
								<td style="font:12px lucida-console,sans-serif !important;text-align:justify; ">
									<span t-field="p.x_immatricul_id" />
								</td>
								<td style=" text-align:justify; ">
									<span t-field="p.x_trajet_id.name" />
								</td>

								<td style="text-align:justify; ">
									<span t-field="p.x_produit_id.name" />
								</td>
								<td style="text-align:right; ">
									<span t-esc="'{:,}'.format(int(p.x_mt_ligne)).replace(',', ' ')"/>

								</td>
							</tr>
						</div>
					</div>
					<tr style="border:0">
						<td colspan="6" style="border:0">
							<br/>
						</td>
					</tr>
					<tr style="font-size:12px;">
						<th colspan="5" style="border-top:1px solid #000;text-align:left; ">
							<strong>Montant Total</strong>
						</th>
						<th colspan="1" style="border-top:1px solid #000; text-align:right; ">
							<span t-esc="'{:,}'.format(int(o.x_total_facture)).replace(',', ' ')"/>

						</th>
					</tr>
				</table>
				<div>
					<p style="font-size:12px;">Arrêté la présente facture à la somme de : <strong>
						<span t-field="o.x_mnt_lettre" />
(						<span t-esc="'{:,}'.format(int(o.x_total_facture)).replace(',', ' ')" />
) Francs CFA </strong>
				</p>
			</div>
			<div></div>
			<div></div>
			<div></div>
			<div></div>
			<table style="width:100% " width="100%" border="0">
				<tr>
					<td width="33%"></td>
					<td width="33%"></td>
					<td width="34%" style="text-align:center">
						<div class="text-center" style="text-align:center; font-size:12px;">
							<p>
								<strong>Directeur Général</strong>
							</p>
							<br></br>
							<br></br>
							<br></br>
							<br></br>
							<span t-field="o.x_signataire_id.name" />
						</div>
					</td>
				</tr>
			</table>


			<div style="clear:both;"></div>
		</div>
	</template>


	<template id="report_facture_transit">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="Gestion_Facturation.report_fa_transit_document" t-lang="lang" />
			</t>
		</t>
	</template>
</data>
</odoo>